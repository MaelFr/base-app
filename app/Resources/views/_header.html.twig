<div class="navbar fixed-top navbar-expand-md navbar-light bg-light" role="navigation">
    <div class="container">
        <a class="navbar-brand" href="{{ path('homepage') }}">
            {{ app_name }}
        </a>
        <button type="button"
                class="navbar-toggle"
                data-toggle="collapse"
                data-target=".navbar-collapse">
            <span class="sr-only">{{ 'menu.toggle_nav'|trans }}</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto mt-2 mt-md-0">
                {% block header_navigation_links %}
                    <li>
                        <a href="{{ path('homepage') }}">
                            <i class="fa fa-home"
                               aria-hidden="true"></i> {{ 'menu.homepage'|trans }}
                        </a>
                    </li>

                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a href="{{ path('admin_homepage') }}" class="nav-link">
                                    <i class="fa fa-lock" aria-hidden="true"></i> {{ 'menu.admin'|trans }}
                                </a>
                            </li>
                        {% endif %}
                    {% endblock %}

                {% if app.user %}
                    <li class="nav-item">
                        <a href="{{ path('fos_user_security_logout') }}"
                           class="nav-link">
                            <i class="fa fa-sign-out"
                               aria-hidden="true"></i> {{ 'menu.logout'|trans }}
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a href="{{ path('fos_user_security_login') }}"
                           class="nav-link">
                            <i class="fa fa-sign-in"></i> {{ 'menu.login'|trans }}
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>